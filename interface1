import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import static java.awt.Font.*;

public class Main extends JFrame implements ActionListener {

    public static void main(String[] args) {


        JButton buttonCalculate = new JButton("Calculate");
        JButton buttonX1 = new JButton("Submit x1");
        JButton buttonX2 = new JButton("Submit x2");

        JTextField instructions = new JTextField();
        instructions.setBounds(20,20,190,60);
        instructions.setText("Simply insert the values of x1 and x2 to corresponding boxes and click \"Submit\" for both. Then click \"Calculate\" ");

        JTextField textFiled_x1 = new JTextField();
        textFiled_x1.setBounds(130,80,80,35);
        textFiled_x1.setFont(new Font("Century", BOLD, 12));
        textFiled_x1.setText("  Value of x1");
        textFiled_x1.setBackground(Color.LIGHT_GRAY);

        JTextField textField_x2 = new JTextField();
        textField_x2.setText("  Value of x2");
        textField_x2.setFont(new Font("Century", BOLD, 12));
        textField_x2.setBackground(Color.LIGHT_GRAY);
        textField_x2.setBounds(130,130,80,35);


        buttonX1.setOpaque(true);
        buttonX1.setBounds(20,80,100,35);


        buttonX2.setOpaque(true);
        buttonX2.setBounds(20,130,100, 35);

        buttonCalculate.setOpaque(true);
        buttonCalculate.setBounds(20,200,190,27);
        buttonCalculate.setVerticalAlignment(JButton.BOTTOM);


        JFrame frame = new JFrame();
        //JButton buttonCalculate = null;
        JPanel panel;

        int num1, num2, num3;

        frame = new JFrame();
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        frame.setSize(250, 480);
        frame.setTitle("Quadratic Equation");
        frame.setResizable(false);
        frame.setVisible(true);
        frame.setLayout(null);
        frame.add(buttonX1);
        frame.add(textFiled_x1);
        frame.add(buttonX2);
        frame.add(textField_x2);
        frame.add(buttonCalculate);
        frame.add(instructions);

        }

        @Override
        public void actionPerformed (ActionEvent e){

        }
    }
